{
    "buttons": ["html", "formatting", "bold", "italic", "unorderedlist", "orderedlist", "alignment", "link" ],
    "plugins": [ "alignment", "linkclass", "listclass", "baukasten" ],
    "linkNewTab": true,
    "toolbarFixed": false,
    "air" : true,
    "imagePosition": false,
    "formatting": ["p"],
    "formattingAdd": {
      "larger": {
        "title": "Larger",
        "api": "module.block.format",
        "args": {
            "tag": "p",
            "class": "larger"
        }
      },
      "smaller": {
        "title": "Smaller",
        "api": "module.block.format",
        "args": {
            "tag": "p",
            "class": "smaller"
        }
      }
    },
    "linkClasses" : [
      { "label": "Button", "class": "button" },
      { "label": "Text w/ Arrow", "class": "buttonText" }
    ],
    "listClasses" : [
        { "label": "Checkmarks",     "class": "checkList" },
        { "label": "Separated Rows", "class": "rowList" }
    ]
}