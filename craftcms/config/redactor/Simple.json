{
  "buttons": ["html", "formatting", "bold", "italic", "unorderedlist", "orderedlist", "link", "line"],
  "plugins": ["email", "listclass", "linkclass"],
  "linkNewTab": true,
  "formattingAdd": {
    "larger": {
      "title": "Larger Paragraph",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "larger"
      }
    },
    "smaller": {
      "title": "Smaller Paragraph",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "smaller"
      }
    }
  },
  "toolbarFixed": true,
  "linkClasses" : [
    { "label": "Button", "class": "button" },
    { "label": "Text w/ Arrow", "class": "buttonText" }
  ],
  "listClasses" : [
    { "label": "Checkmarks",     "class": "checkList" },
    { "label": "2 Columns",      "class": "columnList" },
    { "label": "Separated Rows", "class": "rowList" }
  ]
}
