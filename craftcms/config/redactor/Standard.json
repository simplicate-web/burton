{
  "buttons": ["html", "formatting", "bold", "italic", "unorderedlist", "orderedlist", "alignment", "link", "image"],
  "plugins": [ "alignment", "imageclass", "listclass", "linkclass", "baukasten", "h2h3h4", "eyebrow" ],
  "linkNewTab": true,
  "toolbarFixed": true,
  "imagePosition": false,
  "formatting": ["p", "blockquote"],
  "formattingAdd": {
    "larger": {
      "title": "Larger",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "larger"
      }
    },
    "smaller": {
      "title": "Smaller",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "smaller"
      }
    }
  },
  "linkClasses" : [
    { "label": "Button", "class": "button" },
    { "label": "Text + Arrow", "class": "button textArrow" }
  ],
  "listClasses" : [
    { "label": "Checkmarks",  "class": "checkmarks" },
    { "label": "2 Columns",   "class": "twoColumns" },
    { "label": "Center Rows", "class": "centerRows" }
  ],
  "imageClasses" : [
    { "label": "Basic", "class": "cImageTreatment__basic", "default": true }
  ],
  "eyebrows" : [
    { "label": "Standard", "class": "eyebrowStandard", "default": true },
    { "label": "Knockout", "class": "eyebrowKnockout", "default": false },
    { "label": "Icon",     "class": "eyebrowIcon",     "default": false }
  ]
}
