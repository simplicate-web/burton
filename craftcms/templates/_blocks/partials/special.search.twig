{% set content  = content  ??? null %}
{% set settings = settings ??? null %}

{% set entrySlug = content.owner.slug %}
{% set entryUrl  = content.owner.url ??? '/' %}
{% if entryUrl == '/' and entrySlug == 'search' %}
    {% set entryUrl  = '/search' %}
{% endif %}

{% set settings = ( settings ??? {} ) | merge({
    entryUrl : entryUrl,
}) %}

{{ sprig( "_blocks/partials/collection.feed.sprig", {
    settings  : settings,
    limit     : 10,
    pagination: 'standardWithSearch',
    searchID  : content.feeds.ids() ??? null,
}) }}