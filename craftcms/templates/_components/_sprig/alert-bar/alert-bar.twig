{% set alertActive = true %}
{% if alertActive %}
    <div
        class="
            cAlertBar
            fixed
            bottom-0
            right-0
            left-0
            z-50
            transition-transform
            opacity-0
            translate-y-32
            "

            x-data="{ hasScrolled: false }"
            :class="{
                '!translate-y-0 !opacity-100': hasScrolled
            }"
            @scroll.window.once="
                hasScrolled = true
            "
    >

        <a class="
            block
            p-4
            bg-blue-500
            text-center
            font-bold
            text-white
            hover:bg-black"
            href="#">
            This is an alert message
        </a>
    </div>
{% endif %}

{% js %}
    {% if alertActive %}
        document.querySelector('body').classList.add( 'hasAlert' )
    {% endif %}
{% endjs %}

{% css %}
    body.hasScroller {
        div.cAlertBar {
            transform: translateY(0);
        }
    }
{% endcss %}