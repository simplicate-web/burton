{% extends '_components/cards/base/_base' %}

{% block card_image %}
    {% if ( card_type ??? null == 'detail' and card.item.sourceUrl ??? null ) %}
        {% embed "_components/media/embed" with {
            url: card.item.sourceUrl,
            item: card.item
        } %}
        {% endembed %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}


{% block card_action %}
    {% set variant = settings.variant ??? null %}
    {% if variant == 'interactive' and card_type ??? null != 'detail' %}
        {{ block( 'card_actionModalCard' ) }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}