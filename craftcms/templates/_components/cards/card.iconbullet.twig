{% extends '_components/cards/_common' %}
{% set card_template = _self %}
{% set card_type = 'summary' %}

{% block content %}

    <div class="flex flex-col h-full justify-center gap-2 relative">

        <div class="flex gap-4 justify-center">
            <div class="image mx-auto text-center">
                <div class="w-28">
                    {% from "_components/images" import frame as framer %}
                    {{ framer( card.images, card.settings.cardImageFrame ??? 'icon', card.settings ) }}
                </div>
            </div>

            <div class="@container p-2 rounded-lg lg:p-4 flex-grow flex flex-col gap-3 bg-theme-backgroundOff">
                {% set cardHeaderClass = 'mb-0' %}
                {{ block('card_headline') }}
                {{ block('card_summary') }}
            </div>
        </div>

        {% block action %}
            {{ block('card_action') }}
        {% endblock %}
    </div>
{% endblock %}