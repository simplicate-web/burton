<div
    x-data="{ open: false }"
    class="flex justify-center"
    :class="open ? 'absolute top-0 right-0 bottom-0 left-0 z-50' : ''">

    <!-- Modal -->
    <div
        x-show="open"
        x-on:htmx:after-swap="open=true"
        style="display: none"
        {# x-on:keydown.escape.prevent.stop="open=false ; history.back()" #}
        x-on:keydown.escape.prevent.stop="open=false"
        role="dialog"
        aria-modal="true"
        {# x-id="['modal-title']"
        :aria-labelledby="$id('modal-title')" #}
        class="fixed inset-0 z-50 overflow-y-auto"
        @openModal="open=true"
    >
        <!-- Overlay -->
        <div x-show="open" x-transition.opacity class="fixed inset-0 bg-gray-700 bg-opacity-50"></div>

        <!-- Panel -->
        <div
            x-show="open" x-transition
            x-on:click="open=false ; history.back()"
            class="relative flex min-h-screen items-center justify-center p-4"
        >
            <div
                x-on:click.stop
                x-trap.noscroll.inert="open"
                class="relative w-full max-w-2xl overflow-y-auto rounded-xl bg-white p-12 shadow-lg"
            >
                <div id="ajaxContent"></div>
            </div>
        </div>
    </div>
</div>