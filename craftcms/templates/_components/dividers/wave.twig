{% set blockAbove = blockAbove ?? null %}
{% set blockBelow = blockBelow ?? null %}

{% set waveBg     = waveBg    ??? blockBelow.settings.scene.twColor ??? '' %}
{% set waveColor  = waveColor ??? blockAbove.settings.scene.twColor ??? '' %}

{% if blockBelow.blockType == 'textImage' and blockBelow.settings.value == 'parallax' %}
    {% set waveBg = 'transparent' %}
{% endif %}

{# bg-skyBlue   bg-nauticalBlue   bg-midnightBlue   bg-white    #}
{# fill-skyBlue fill-nauticalBlue fill-midnightBlue fill-white  #}

{% if waveColor %}
    <div class="
        waveAbove
        bg-{{waveBg}}
        h-[70px]
        overflow-hidden
        w-full
        relative
        z-20
        ">
        <svg class="
            fill-{{waveColor}}
            relative
            block
            w-full
            h-full
            " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
        </svg>
    </div>
{% endif %}

{% css %}
    .waveAbove + .noContainer {
        margin-top: -70px;
    }
{% endcss %}