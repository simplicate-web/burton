{## basic implementation of the accordion base ##}
{% embed '_components/accordion/_base' with {
    hTag : htag  ??? 'h3',
    card : card  ??? card,
    items: items ??? null
} %}
    {% block panelContent %}
        {% import "_components/cards" as cards %}
        {{ cards.render( panel, card ) }}
    {% endblock %}

    {% block panelTitle %}
        {% import "_components/cards" as cards %}
        {{ cards.title( panel, card ) }}
    {% endblock %}

    {% block panelOpenClass %}
        p-6 bg-white
    {% endblock %}
{% endembed %}