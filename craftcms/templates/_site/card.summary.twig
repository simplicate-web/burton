{## Summary Card   [Site Template]
{-------------------------------------------------------------------------------------##}
{% extends [ "_site/card", "_core/card" ] %}
{% import "_assemble" as assemble %}


{## Template Variables
{---------------------------------------------------------------------------------------}

{-------------------------------------------------------------------------------------##}
{%- set card = card ??? null -%}

{%- set settings = settings is not null and settings is iterable ? settings : {} -%}
{%- set settings = settings | merge({
    imagelayer: 'widescreen'
}) -%}


{## Overload Parent Blocks
{---------------------------------------------------------------------------------------}

{-------------------------------------------------------------------------------------##}
{% block card__class "w-full h-full relative bg-canvas-light rounded-lg flex flex-col @container" %}

{% block card__words__open  '<div class="flex flex-col gap-4 p-4">' %}
{% block card__words__close '</div>' %}

{% block card__summary tag( 'div', {
    class: 'hidden @xs:block',
    html : assemble.text( 'card__summary', card.summary, settings )
}) %}