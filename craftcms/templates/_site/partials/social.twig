<div class="flex flex-row gap-2 mt-8">
    {% for social in seomatic.site.sameAsLinks %}
        {% if social.url %}
            <div>
                <a href="{{social.url ??? '#'}}" class="flex" title="{{social.siteName}}" target="_blank" rel="noopener">
                    <span class="h-8 w-8 xl:w-10 xl:h-10">{{_self.socialSVG( social.handle, '#475569' ) }}</span>
                </a>
            </div>
        {% endif %}
    {% endfor %}
</div>

{% macro socialSVG( handle, useColor ) %}
    {% if handle == 'facebook' %}
        {% set useColor = useColor ??? '#1877f2' %}
        <svg xmlns="http://www.w3.org/2000/svg"
        aria-label="Facebook" role="img"
        viewBox="0 0 512 512"><rect
        width="512" height="512"
        rx="15%"
        fill="{{useColor}}"/><path d="M355.6 330l11.4-74h-71v-48c0-20.2 9.9-40 41.7-40H370v-63s-29.3-5-57.3-5c-58.5 0-96.7 35.4-96.7 99.6V256h-65v74h65v182h80V330h59.6z" fill="#fff"/></svg>
    {% endif %}

    {% if handle == 'instagram' %}
        {% set useColor = useColor ??? '#000' %}
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
        aria-label="Instagram" role="img"
        viewBox="0 0 512 512"><rect
        width="512" height="512"
        rx="15%"
        fill="{{useColor}}" /><g
        stroke="#fff" stroke-width="30"><rect width="308" height="308" x="102" y="102" rx="81" fill="{{useColor}}"/><circle cx="256" cy="256" r="72" fill="{{useColor}}"/><circle cx="347" cy="165" r="6" /></g></svg>
    {% endif %}

    {% if handle == 'youtube' %}
        {% set useColor = useColor ??? '#ed1d24' %}
        <svg xmlns="http://www.w3.org/2000/svg"
        aria-label="YouTube" role="img"
        viewBox="0 0 512 512"
        fill="#fff"><rect
        width="512" height="512"
        rx="15%"
        fill="{{useColor}}"/><path d="m427,169c-4-15-17-27-32-31-34-9-239-10-278,0-15,4-28,16-32,31-9,38-10,135 0,174 4,15 17,27 32,31 36,10 241,10 278,0 15-4 28-16 32-31 9-36 9-137 0-174zm-207,140v-106l93,53z" fill="#fff"/></svg>
    {% endif %}

    {% if handle == 'linkedin' %}
        {% set useColor = useColor ??? '#0077b5' %}
        <svg xmlns="http://www.w3.org/2000/svg"
        aria-label="LinkedIn" role="img"
        viewBox="0 0 512 512"
        fill="#fff"><rect
        width="512" height="512"
        rx="15%"
        fill="{{useColor}}"/><circle cx="142" cy="138" r="37"/><path stroke="#fff" stroke-width="66" d="M244 194v198M142 194v198"/><path d="M276 282c0-20 13-40 36-40 24 0 33 18 33 45v105h66V279c0-61-32-89-76-89-34 0-51 19-59 32"/></svg>
    {% endif %}

    {% if handle == 'twitter' %}
        {% set useColor = useColor ??? '#1da1f2' %}
        <svg xmlns="http://www.w3.org/2000/svg"
        aria-label="Twitter" role="img"
        viewBox="0 0 512 512"><rect
        width="512" height="512"
        rx="15%"
        fill="{{useColor}}"/><path fill="#fff" d="M437 152a72 72 0 01-40 12a72 72 0 0032-40a72 72 0 01-45 17a72 72 0 00-122 65a200 200 0 01-145-74a72 72 0 0022 94a72 72 0 01-32-7a72 72 0 0056 69a72 72 0 01-32 1a72 72 0 0067 50a200 200 0 01-105 29a200 200 0 00309-179a200 200 0 0035-37"/></svg>
    {% endif %}

    {% if handle == 'pinterest' %}
        {% set useColor = useColor ??? '#bd081b' %}
        <svg xmlns="http://www.w3.org/2000/svg"
        aria-label="Pinterest" role="img"
        viewBox="0 0 512 512"><rect
        width="512" height="512"
        rx="15%"
        fill="{{useColor}}"/><path d="m265 65c-104 0-157 75-157 138 0 37 14 71 45 83 5 2 10 0 12-5l3-18c2-6 1-7-2-12-9-11-15-24-15-43 0-56 41-106 108-106 60 0 92 37 92 85 0 64-28 116-70 116-23 0-40-18-34-42 6-27 19-57 19-77 0-18-9-34-30-34-24 0-42 25-42 58 0 20 7 34 7 34l-29 120a249 249 0 0 0 2 86l3-1c2-3 31-37 40-72l16-61c7 15 29 28 53 28 71 0 119-64 119-151 0-66-56-126-140-126z" fill="#fff"/></svg>
    {% endif %}
{% endmacro %}