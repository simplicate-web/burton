<div class="@container">
    <div class="like-h3">Quick Links</div>

    {% embed '_site/menu.list' with {
        title : 'Quick Links',
        items : craft.navigation.nodes().handle( 'features' ).level(1).all()|default(),
    } %}
        {% block menuClass %}
            m-0
            p-0
            list-none
            flex
            flex-col
            leading-none
            gap-4
            text-xs
            no-underline
            underline-offset-2
        {% endblock %}

        {% block itemClass %}
            flex
            flex-col
            items-center
            whitespace-nowrap
            hover:underline
            hover:text-link-active
        {% endblock %}
    {% endembed %}
</div>