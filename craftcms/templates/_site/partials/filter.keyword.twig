{## arguments passed to this template ##}
{% set params   = params   ??? null %}
{% set settings = settings ??? null %}
{% set resultId = resultId ??? null %}

<div class="
    border
    border-theme-dark
    flex
    flex-row
    rounded-lg
    bg-theme-contrast-light
    p-2
">
    <input
        name="q"
        type="search"
        value="{{params.query}}"
        placeholder="Enter search term..."
        class="
            flex-grow
            w-full
            !p-0
            border-none
        "

        {% if resultId %}
            sprig
            s-val:page="1"
            s-replace="{{resultId}}"
            s-trigger="keyup changed delay:300ms"
        {% endif %}
    >
    {% if resultId %}
        <button class="button" sprig>Search</button>
    {% else %}
        <button class="button">Search</button>
    {% endif %}
</div>