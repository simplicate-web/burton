{## Render a Card for a Content Entry
 ------------------------------------------------------------------------------------ ##

 ------------------------------------------------------------------------------------ ##}
{% macro card( content = null, card = {}, settings = {} ) %}

    {% set section    = card.section ??? settings.section    ??? content.section.handle ??? content.section ??? null %}
    {% set cardlayout = card.name    ??? settings.cardlayout ??? 'summary' %}

    {% set card = {
        section: section,
        cardlayout: cardlayout,
        path: [
            "_site/card.#{cardlayout}",
            "_site/card",
            "_core/card"
        ]
    } %}

    {% if content and cardlayout %}
        {% import "_core/card" as cards %}
        {{ cards.single( content, card, settings ) }}
    {% endif %}
{% endmacro %}


{## Render an Image
 ------------------------------------------------------------------------------------ ##

 ------------------------------------------------------------------------------------ ##}
{% macro image( image = null, frame = null, settings = {} ) %}
    {% import "_core/assemble" as assemble %}

    {% set frame = {
        class       : frame.class     ?? "w-full max-w-full h-auto rounded-lg",
        figure      : frame.figure    ?? "relative z-20",
        include     : frame.include   ?? null,
        caption     : frame.caption   ?? null,
        transform   : frame.transform ?? "square",
        _placeholder: frame._placeholder ?? null,
    } %}

    {% set useCaptions = settings.imageCaptions ?? settings.captions ?? null %}
    {% if useCaptions %}
        {% set captionParts = {
            title  : image.title   ??? image[0].title   ??? null,
            summary: image.summary ??? image[0].summary ??? null,
            alt    : image.alt     ??? image[0].alt     ??? null,
            use    : useCaptions,
        } %}

        {% set frame = frame|merge({
            caption: assemble.typography( captionParts, 'figcaption' )
        }) %}
    {% endif %}

    {{- assemble.img( image, frame ) | raw -}}
    {%- if frame.include ??? null %}{{ include( frame.include ) }}{% endif -%}
{%- endmacro %}



