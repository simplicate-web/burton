{% extends "_site/template.fullpage" %}

{%- block body__class "font-body text-theme-bodycopy m-0 p-0" -%}

{% block page__content %}
    <div data-theme="accent" class="absolute inset-x-0 inset-y-0 py-20 flex items-center justify-center bg-theme canvas">
        <div class="w-full max-w-2xl mx-auto">

            <div class="flex py-6 px-4 md:px-0">
                <div class="">{{ block('logo', "_site/header" ) | retconAttr('svg', { class: "block h-20 fill-current" }) }}</div>
                <div class="flex flex-col w-full items-end justify-between items-start">
                    <a href="{{siteUrl('')}}" class="text-xs">
                        {{ svg( '@appicons/home.svg' ) }}
                        <span>TheArtOf.com</span>
                    </a>

                    <div class="text-right">
                        <a cass="text-theme-link underline-offset-2 hover:underline hover:text-theme-link-tint" href="{{ siteUrl('help/account') }}">
                            <span class="hidden sm:inline">Need help with your account?</span>
                            <span class="inline sm:hidden">Need account help?</span></a>
                    </div>
                </div>
            </div>

            <div class="bg-theme pb-10" data-theme="light">
                <div class="px-4 sm:px-8">
                    {% block headline %}
                        {{ ( headline ??? null )
                            ? tag( 'h1', { text: headline, class: "py-8" } )
                            : block('plaintitle', "_site/header" )
                                | retconAttr('h1', { class: "text-left py-8" }) }}
                    {% endblock %}
                </div>

                {{ block('main__base') | retconAttr('main', { class: "relative z-10" }) }}
            </div>

            {{ block( 'footer__slim', '_site/footer' )
                | retconAttr( 'footer', { class: 'sm:-mx-4 md:-mx-8' }, false ) }}
        </div>
    </div>
{% endblock %}
