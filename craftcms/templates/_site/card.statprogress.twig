{## Panel Card   [Site Template]
{-------------------------------------------------------------------------------------##}
{% extends [ "_site/card", "_core/card" ] %}


{## Template Variables
{---------------------------------------------------------------------------------------}

{-------------------------------------------------------------------------------------##}
{%- set card = card ??? null -%}

{%- set settings = settings ?? null is iterable ? settings : {} -%}


{## Overload Parent Blocks
{---------------------------------------------------------------------------------------}

{-------------------------------------------------------------------------------------##}
{% block card__class "w-full relative grid grid-cols-1" %}

{% block card__images  %}
    <div class="flex items-center justify-center">
        {## Temp - https://nikitahl.github.io/svg-circle-progress-generator/ ##}
        <svg width="200" height="200" viewBox="-25 -25 250 250" version="1.1" xmlns="http://www.w3.org/2000/svg" style="transform:rotate(-90deg)">
            <circle r="90" cx="100" cy="100" fill="transparent" stroke="#e0e0e0" stroke-width="16px" stroke-dasharray="565.48px" stroke-dashoffset="0"></circle>
            <circle r="90" cx="100" cy="100" stroke="#76e5b1" stroke-width="16px" stroke-linecap="round" stroke-dashoffset="57px" fill="transparent" stroke-dasharray="565.48px"></circle>
            <text x="55px" y="116px" fill="#6bdba7" font-size="52px" font-weight="bold" style="transform:rotate(90deg) translate(0px, -196px)">{{ card.headline }}</text>
        </svg>
    </div>
{%- endblock %}

{% block card__words -%}
    <div class="text-center">
        {{- ( card.text ??? card.summary ) | raw -}}
    </div>

    {{ block('card__action')}}
{%- endblock %}