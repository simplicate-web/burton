
{## Render a Collection into Cards and arrange them in a Grid
 ------------------------------------------------------------------------------------ ##}
{% macro cardGrid( collection = [], settings = {} ) %}
    {% import "_core/card" as cards %}
    {% import "_core/assemble" as assemble %}

    {% set gridName = settings.cardGrid   ?? "fixed1"  %}
    {% set cardName = settings.cardLayout ?? "summary" %}

    {{ assemble.grid( gridName, cards.multiple( collection, cardName, settings ) ) }}
{% endmacro %}
