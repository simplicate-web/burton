{## Bullet Icon Card   [Site Template]
{-------------------------------------------------------------------------------------##}
{% extends [ "_site/card", "_core/card" ] %}


{## Template Variables
{---------------------------------------------------------------------------------------}

{-------------------------------------------------------------------------------------##}
{%- set card = card ??? null -%}

{%- set settings = settings is not null and settings is iterable ? settings : {} -%}
{%- set settings = settings | merge({
    card__imagelayer: 'icon'
}) -%}


{## Overload Parent Blocks
{---------------------------------------------------------------------------------------}

{-------------------------------------------------------------------------------------##}
{% block card__class "w-full relative @container flex flex-col gap-4" %}

{% block card__words -%}
    <div class="flex flex-col gap-4">
        {%- block card__headline -%}
            {%- if card.headline %}<h3 class="!my-0 text-center">{{ raw( card.headline ) }}</h3>{% endif -%}
        {%- endblock -%}

        {%- block card__summary -%}
            {%- if card.summary %}{{ card.summary | attr({ class: "text-center" }) }}{% endif -%}
        {%- endblock -%}
    </div>

    {{- block('card__action') -}}
{%- endblock -%}