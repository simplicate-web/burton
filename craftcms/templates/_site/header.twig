{% block utility %}
    {% set handle = 'utility' %}
    {% set title  = title ??? craft.navigation.getNavByHandle( handle ).name ??? 'Utility' %}
    {% set nodes  = craft.navigation.nodes().handle( handle ).level(1) %}

    {% if nodes | length %}
        <div class="items-center gap-3 pb-6 3xs:pb-10 2xs:pb-6 xs:pb-4">
            {% embed ["_site/menu.list", "_core/menu.list"] with {
                title : title,
                handle: handle,
                items : nodes.all() ??? null,
            } %}
                {% block lastItem %}
                    {{ block( 'openItem' ) }}

                    {{ tag( 'a', {
                        href : siteUrl('/search'),
                        class: 'block w-4 h-4',
                        html : svg( '@appicons/search.svg' ) | attr({ 'class': 'w-4 h-4 block fill-current'})
                    }) }}

                    {{ block( 'closeItem' ) }}
                {% endblock %}

                {% block menuClass %}
                    m-0
                    p-0
                    list-none
                    flex
                    no-underline
                    text-xs
                    3sm:gap-3
                    md:text-sm
                {% endblock %}

                {% block itemClass %}
                    p-2
                    pt-0
                    flex
                    flex-col
                    items-center
                    whitespace-nowrap
                    text-theme-link
                    underline-offset-1
                    hover:underline
                    hover:text-theme-link-tint
                {% endblock %}
            {% endembed %}
        </div>
    {% endif %}
{% endblock %}


{% block opentag %}
    <header {{ attr({
        id   : "masthead",
        role : "banner",
        class: "relative z-10 canvas",
        data : { theme: theme ??? 'base' }
    }) }}>
{% endblock %}


