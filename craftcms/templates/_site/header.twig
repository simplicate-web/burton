{## Page Header Elements   [Site Template]
{---------------------------------------------------------------------------------------}
    Defaults & common elements that appear in and around the site-wide page <header>.
    - http://localhost:8000/sitehub/layout/header
{-------------------------------------------------------------------------------------##}
{% block header__base %}
    {% import "_assemble" as assemble %}

    {% set headblocks = entry.headerBuilder.all() ??? null %}
    {% set intopbar   = ( headblocks and headblocks[0].settings.spacerabove ??? false == 'topbar' ) %}
    {% set theme      = ( headblocks and headblocks[0].settings.theme ??? 'base' ) %}

    {% if not headblocks or not intopbar %}
        {{ block('header__topbar') }}
        {{ block('header__breadcrumb') }}
    {% endif %}

    {% block header__open %}
        <header {{attr({
            id   : "masthead",
            role : "banner",
            class: "relative z-40 py-10",
            data : { theme: theme }
        }) }}>
    {% endblock %}

    {% block header__content %}
        {% import "_assemble" as assemble %}

        {% set headblocks = headblocks ??? entry.headerBuilder.all() ??? null %}
        {% set headblocks = headblocks ? headblocks : [{ html: block('header__plainH1') }] %}

        {{ assemble.builder( 'header', headblocks, {
            container  : "fluid",
            spacerabove: "none",
            spacerbelow: "none"
        }) }}
    {% endblock %}

    {% block header__close "</header>" %}

    {% if headblocks and intopbar %}
        {{ block('header__breadcrumb') }}
    {% endif %}
{% endblock %}



{% block header__plainH1 %}
    {% import "_assemble" as assemble %}

    {% set title    = entry.title    ??? null %}
    {% set subtitle = entry.subtitle ??? null %}

    {{ title    ? tag( 'h1', { text: title, class: "" } ) }}
    {{ subtitle ? assemble.container( 'prose', tag( 'p', { html: subtitle, class: 'larger' } ), { 'data-bodytext': true } ) }}
{% endblock %}



{% block header__breadcrumb %}
    <div >
        {% import "_assemble" as assemble %}
        {{ assemble.container( 'fluid', assemble.menu( entry, 'breadcrumb', {} ) ) }}
    </div>
{% endblock %}



{% block header__topbar %}
    {% import "_assemble" as assemble %}

    <div {{ attr({ class: ["w-full relative z-50"], 'data-theme': 'light' }) }}>

        {{ assemble.opencontainer( 'fluid' ) }}

        <div class="flex">

            {% block header__topbar__logo %}
                <div class="flex items-center w-full gap-8">{{ _self.logo() }}</div>
            {% endblock %}

            {% block header__topbar__navigation %}

                <div class="w-full lg:flex flex-col flex-grow text-right items-end gap-6">
                    {% block header__topbar__navUtility %}
                        <div class="flex items-center gap-3">
                            {% import "_assemble" as assemble %}
                            {{ assemble.menu( entry, 'utility', {} ) }}
                        </div>
                    {% endblock %}

                    {% block header__topbar__navPrimary %}
                        <div class="flex items-center gap-6">
                            {% import "_assemble" as assemble %}
                            {{ assemble.menu( entry, 'primary', {} ) }}
                        </div>
                    {% endblock %}

                    {% block header__topbar__navMobileTrigger %}
                        {% import "_core/menu.mobile" as mobilemenu %}
                        {# {{ mobilemenu.trigger() }} #}
                    {% endblock %}
                </div>

            {% endblock %}
        </div>

        {{ assemble.closecontainer() }}
    </div>
{% endblock %}



