{% extends ["_site/cards/base", "_core/cards/base"] %}

{% set _card_tmpl = _self %}

{% use "_cards/parts.headlines" %}
{% use "_cards/parts.actions"   with action_modal      as card_action  %}

{% block content %}
    <div class="flex flex-col h-full w-full gap-2 relative @container" data-card="thumbnail">
        {% if card.images and card.images|first %}
            <div class="image h-full w-full aspect-video">
                {{ block('card_image') }}
            </div>

            <div class="absolute inset-0">
                <div class="flex flex-col h-full items-center justify-center">

                    <div data-headline="thumbnail">
                        {{ block('headline_knockout') }}
                    </div>

                    <div class="h-0 overflow-hidden">
                        {% block action %}{{ block('card_action') }}{% endblock %}
                    </div>
                </div>
            </div>
        {% else %}
            <div data-headline="thumbnail">
                {{ block('headline_knockout') }}
            </div>

            <p class="line-clamp-3">
                {{ block('card_summary') }}
            </p>
        {% endif %}
    </div>
{% endblock %}