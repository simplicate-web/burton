{% block footer__theme %}
    {% css %}
        *[data-theme="footer"] {
            --theme-canvas-light  : var(--color-primary);
            --theme-canvas        : var(--color-primary-dark);
            --theme-canvas-dark   : var(--color-primary-dark);
            --theme-text          : var(--color-white-50);
            --theme-text-light    : var(--color-white);
            --theme-text-dark     : var(--color-white-100);
            --theme-accent        : var(--color-primary);
            --theme-headline      : var(--color-primary-light);
            --theme-eyebrow       : var(--color-primary-light);
            --theme-link          : var(--color-white);
            --theme-link-bg       : transparent;
            --theme-link-active   : var(--color-alert);
            --theme-link-active-bg: transparent;
            --theme-btn           : var(--color-white);
            --theme-btn-b         : var(--color-white);
            --theme-btn-bg        : transparent;
            --theme-btn-active    : var(--color-alert);
            --theme-btn-active-bg : var(--color-primary-dark);
            --theme-btn-active-b  : var(--color-alert);
        }
    {% endcss %}
{% endblock %}



{% macro social() %}
    <div class="flex flex-row gap-2 mt-8">
        {% for social in seomatic.site.sameAsLinks %}
            {% if social.url %}
                <div>
                    <a href="{{social.url ??? '#'}}" class="flex" title="{{social.siteName}}" target="_blank" rel="noopener">
                        <span class="h-8 w-8 xl:w-10 xl:h-10">{{ svg( '@webroot/static/svg/#{social.handle}.svg' ) }}</span>
                    </a>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endmacro %}