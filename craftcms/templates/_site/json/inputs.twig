
{% block inputGapAbove %}
{
    "label": "Gap Above",
    "field": "interspaceAbove",
    "type" : "select",
    "fieldClass": "field width-50",
    "instructions": "The size of the whitespace gap before this block.",
    "options" : {
        "base" : "Standard",
        "lg"   : "Large",
        "none" : "None"
    }
}
{% endblock %}


{% block inputGapBelow %}
{
    "label": "Gap Below",
    "field": "interspaceBelow",
    "type" : "select",
    "fieldClass": "field width-50",
    "instructions": "The size of the whitespace gap after this block.",
    "options" : {
        "base": "Standard",
        "lg"  : "Large",
        "none": "None"
    }
}
{% endblock %}


{% block inputContainer %}
{
    "label": "Container Width",
    "field": "container",
    "type" : "select",
    "fieldClass": "field width-50",
    "instructions": "",
    "options" : {
        "fluid" : "Fluid Width Widescreen",
        "static": "Static Desktop Width",
        "tablet": "Narrow (Tablet Portrait)",
        "none"  : "Edge-to-Edge Bleed"
    }
}
{% endblock %}


{% block inputClickAction %}
{
    "label": "Click Action",
    "field": "action",
    "type" : "select",
    "fieldClass": "field width-50",
    "instructions": "What will happen when a user clicks on an item?",
    "options" : [
        {
            "label" : "Auto Link",
            "value" : "autolink"
        }
       ,{
            "label" : "Summary Modal",
            "value" : "modal"
        }
       ,{
            "label" : "Dynamic Modal",
            "value" : "dynamic"
        }
       ,{
            "label" : "No Clickthrough",
            "value" : "none"
        }
    ]
}
{% endblock %}


{% block inputElevateHeadlines %}
{
    "label": "Elevate Opening Headline(s)",
    "field": "elevateHeadlines",
    "type" : "lightswitch",
    "instructions": "Relocates leading H2 & H3 content from primary copy to span above layout columns."
}
{% endblock %}


{% block inputAnimate %}
{
    "label": "Animate",
