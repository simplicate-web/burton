    "label": "Search Interface",
    "value": "search",
    "docs" : {
        "tooltip": "Present users an opportunity to search and filter one or more collections.",
        "modalTitle": "Collection Search + Results User Interface",
        "modalIntro": "Customize the appearance and behavior of the search results interface for this collection block."
    },
    "inputs": [
        {
            "label": "Paginatation",
            "field": "pagination",
            "type" : "select",
            "instructions": "How do you want to handle more than one 'page' of results?",
            "fieldClass": "width-50",
            "options" : [
                {
                    "value" : "none",
                    "label" : "No Pagination"
                }
               ,{
                    "value" : "nextprev",
                    "label" : "Next / Previous"
                }
               ,{
                    "value" : "loadmore",
                    "label" : "Load More"
                }
               ,{
                    "value" : "infinite",
                    "label" : "Infinite Scroll"
                }
            ]
        }

       ,{
            "label"  : "Results per page",
            "field"  : "perpage",
            "type"   : "number",
            "fieldClass": "width-50",
            "instructions": "How many results should be shown per page?",
            "default": 12,
            "size"   : 8
        }

       ,{
            "label": "Search By Keyword?",
            "field": "filterByKeyword",
            "instructions": "Allow users to search the collection by keyword?",
            "fieldClass": "width-50",
            "type" : "lightswitch"
        }

       ,{
            "label": "Filter by Topic?",
            "field": "filterByTopic",
            "instructions": "Allow toggling between Topics associated with this Collection",
            "fieldClass": "width-50",
            "type" : "lightswitch"
        }

       ,{
            "label": "Show Results without Search?",
            "instructions": "Display results without requiring a search or filter?",
            "field": "requireKeyword",
            "default": "1",
            "type" : "lightswitch"
        }

       ,{
            "label": "Card Type",
            "field": "card",
            "type" : "select",
            "instructions": "Which card layout should be used to present the items?",
            "fieldClass": "width-50",
            "default"   : "Summary",
            "options" : {
                "search"  : "Search Results",
                "summary" : "Summary",
                "textOnly": "Text List"
            }
        }

       ,{
            "label": "Click Action",
            "field": "action",
            "type" : "select",
            "instructions": "What will happen when a user clicks on an item?",
            "fieldClass": "width-50",
            "options" : [
                {
                    "label" : "Auto Link",
                    "value" : "autolink"
                }
               ,{
                    "label" : "Summary Modal",
                    "value" : "modal"
                }
               ,{
                    "label" : "Dynamic Modal",
                    "value" : "dynamic"
                }
               ,{
                    "label" : "No clickthrough",
                    "value" : "none"
                }
            ]
        }

       ,{
            "label": "# of Columns",
