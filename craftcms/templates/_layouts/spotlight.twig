{% extends "_layouts/_common" %}

{% block bodyTagOpen %}
    {{ parent() | attr({
        class: ['bg-gray-900'],
        'hx-ext': 'ajax-header'
    }) }}
{% endblock %}

{% block mainTagOpen %}
    {{ parent() | attr({
        class: ['max-w-3xl w-full mx-auto bg-white'],
        'hx-ext': 'ajax-header'
    }) }}
{% endblock %}

{% block page %}
    {{ tag( 'div', {
        class: ['max-w-3xl w-full mx-auto py-4'],
        html: block('logo')
    })}}

    {{ block( 'header' ) | attr({
        class: ['max-w-3xl w-full mx-auto bg-white'],
        'hx-ext': 'ajax-header'
    }) }}

    {{ block( 'base_main' ) }}
{% endblock %}
