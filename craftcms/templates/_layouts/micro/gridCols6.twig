{% set settings = {
    gridBase: '
        grid
        grid-cols-2
        md:grid-cols-3
        lg:grid-cols-6
        gap-10
        xl:gap-14
        justify-center
        items-center
    '
}|merge( settings )|map( (item,key) => _context[key] ??? item ) %}

{% block grid %}
    <div class="{{settings.gridBase}}">
        {% block items %}{{ gridItems ??? null }}{% endblock %}
    </div>
{% endblock %}