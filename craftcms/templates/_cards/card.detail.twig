{% extends '_cards/base' %}
{% set card_template = _self %}
{% set card_type = 'detail' %}
{% use "_cards/parts.headlines" with headline_knockout as card_headline %}
{% use "_cards/parts.actions"   with action_textlink   as card_action %}

{% block content %}
    <div class="flex flex-col w-full gap-4">
        <div class="image @3xl:max-w-1/2 w-full overflow-hidden relative">
            <div class="@container absolute inset-4">
                {{ block('card_headline') }}
            </div>

            {{ block('card_image') }}

            {{ block( 'card_after_image' ) is defined ? block( 'card_after_image' ) }}
        </div>

        <div class="text-theme-foreground flex flex-col gap-2 w-full px-4">

            {{ block( 'card_before_summary' ) is defined ? block( 'card_before_summary' ) }}

            {{ block('card_summary') }}

            {{ block('card_action') }}
        </div>
    </div>
{% endblock %}