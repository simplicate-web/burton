{% extends '_cards/base' %}
{% set card_template = _self %}
{% set card_type = 'detail' %}
{% use "_cards/parts.actions" with action_textlink as card_action %}

{% block content %}
    <div class="w-full flex flex-col @3xl:flex-row gap-8 @5xl:gap-16 align-center">
        <div class="flex-grow flex flex-col gap-2 w-full">
            <div>{{ block('card_headline') }}</div>
            <div>{{ block('card_summary') }}</div>

            {% set action = block('card_action') %}
            {% if action %}<div>{{ action }}</div>{% endif %}
        </div>

        <div class="image w-full">
            {{ block('card_image') }}

            {{ block( 'card_after_image' ) is defined ? block( 'card_after_image' ) }}
        </div>
    </div>
{% endblock %}


