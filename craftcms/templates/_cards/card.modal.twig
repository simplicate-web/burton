{% extends '_cards/base' %}
{% set card_template = _self %}
{% set card_type = 'modal' %}
{% use "_cards/parts.headlines" %}
{% use "_cards/parts.summaries" with summary_overflow as card_summary %}
{# {% use "_cards/parts.actions" with action_textlink as card_action %} #}

{# {% use "_cards/parts.actions"   with action_default   as card_action  %} #}

{% block content %}
    <div class="flex gap-8 gap-x-20 flex-col 2xl:flex-row-reverse w-full">
        {{ block('card_image') }}
        <div class="w-full">
            {{ block('card_headline') }}
            {{ block('card_before_summary') is defined ? block('card_before_summary') }}
            {{ block('card_summary') }}
            {{ block('card_action') }}
        </div>
    </div>
{% endblock %}

{% block card_headline %}
    {% set headline = parent() ??? null %}
    {{ headline | retconAttr( '[data-headline]', { ':id':"$id('modal-title')", class: "like-h2" } ) }}
{% endblock %}

{% block card_action %}
    {% if card.item.url ??? null %}
        <div class="flex pt-4">
            <a href="{{ card.item.url }}" class="button clickCover">Continue Reading</a>
        </div>
    {% endif %}
{% endblock %}