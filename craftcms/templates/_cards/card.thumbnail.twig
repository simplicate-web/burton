{% extends '_cards/base' %}
{% set card_template = _self %}
{% set card_type = 'thumbnail' %}
{% use "_cards/parts.headlines" with headline_knockout as card_headline %}
{% use "_cards/parts.actions"   with action_modal      as card_action  %}

{% block content %}
    <div class="flex flex-col h-full w-full gap-2 relative @container" data-card="thumbnail">
        <div class="image">
            {{ block('card_image') }}
        </div>

        <div class="absolute inset-0">
            <div class="flex flex-col h-full items-center justify-center">

                <div data-headline="thumbnail">
                    {{ block('card_headline') }}
                </div>

                <div class="h-0 overflow-hidden">
                    {% block action %}{{ block('card_action') }}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}