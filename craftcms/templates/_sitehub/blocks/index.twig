{% extends "_sitehub/base" %}

{% html %}
    {## we need to include these here because they don't get loaded via the sprig/htmx
        based previewer, but they do load normally. moving them into app.js would also
        fix the issue, but this is a quick fix for demo purposes.
     -------------------------------------------------------------------------------- ##}
    {% import '_core/javascript' as javascript %}
    {{ javascript.splide_cdn() }}
{% endhtml %}

{% set blocktype = type ??? null %}

{% set allowedBlocks = {
    text: {
        variant   : "_config/block.text.json",
        theme     : "_config/theme.content.json",
        layout    : "_config/layout.text.content.json",
        content   : [
            "_sitehub/content/block.text.simple",
            "_sitehub/content/block.text.double"
        ],
    },

    image: {
        variant   : "_config/block.image.json",
        theme     : "_config/theme.content.json",
        layout    : "_config/layout.image.content.json",
        content   : [
            "_sitehub/content/block.image.single",
            "_sitehub/content/block.image.single.tallimage",
            "_sitehub/content/block.image.single.longtext",
            "_sitehub/content/block.image.three",
            "_sitehub/content/block.image.gallery"
        ],
    },

    collection: {
        variant   : "_config/block.collection.json",
        theme     : "_config/theme.content.json",
        layout    : "_config/layout.collection.content.json",
        content   : [
            "_sitehub/content/block.collection.simple"
        ],
    },

    media: {
        variant   : "_config/block.media.json",
        theme     : "_config/theme.content.json",
        layout    : "_config/layout.media.content.json",
        content   : [
            "_sitehub/content/block.media.one.youtube",
            "_sitehub/content/block.media.four.youtube",
            "_sitehub/content/block.media.four.youtube.centered",
        ],
    },

} %}

{% set config = allowedBlocks[blocktype]|default() %}

{% block main__content %}
    {% if config %}
        {{ sprig( '_sitehub/blocks/_previewer.sprig', { type: blocktype, config: config } ) }}
    {% else %}
        <div data-theme="base">
            <div class="container @container py-28 text-center">
                <h1>Content Blocks</h1>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 my-20">
                    {% for blocktype, config in allowedBlocks %}
                        <div class="shadow rounded-lg p-8 relative bg-theme-contrast-light @container">
                            <h2 class="capitalize">{{ blocktype | kebab | replace({ '-': ' ' }) }}</h2>
                            <p class="html">{{ config.content|length }} content samples</p>
                            <p class="html"><a href="{{ url( "sitehub/blocks/#{blocktype}" ) }}" class="click__cover">Preview</a></p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

{% endblock main__content %}