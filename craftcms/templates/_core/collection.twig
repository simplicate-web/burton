{% macro default( items = [], settings = {} ) -%}
    {% import "_assemble" as assemble %}
    {%- if items -%}
        {% set cardlayer = settings.cardlayer ??? 'default' %}
        {%- for item in items -%}
            {{- assemble.card( item, cardlayer, settings, loop ) -}}
        {%- endfor -%}
    {%- endif -%}
{%- endmacro %}


{% macro single( items = [], settings = {} ) -%}
    {%- import "_assemble" as assemble -%}
    {% set cardlayer = settings.cardlayer ??? 'default' %}
    {{- assemble.card( item, cardlayer, settings ) -}}
{%- endmacro %}



{% macro randomize( items = [], settings = {} ) -%}
    {%- import "_assemble" as assemble -%}
    {% set cardlayer = settings.cardlayer ??? 'default' %}
    {{- assemble.card( shuffle(items)|first, cardlayer, settings ) -}}
{%- endmacro %}