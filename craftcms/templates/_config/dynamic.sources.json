[{
    "value": "articles",
    "label": "Articles",
    "tooltips": {
        "inline" : "Articles, Guides, Videos, Podcasts, etc."
    },
    "virtuals": [{
        "type" : "select",
        "name" : "variant",
        "label": "Variant",
        "fieldClass": "width-100",
        "default": "",
        "options": [{
            "value": "",
            "label": "Any Article Variant"
        },{
            "value": "article_general",
            "label": "General Articles"
        },{
            "value": "article_guide",
            "label": "Learning Guides"
        },{
            "value": "article_exclusive",
            "label": "Insider Exclusive"
        },{
            "value": "article_audio",
            "label": "Podcast • Audio"
        },{
            "value": "article_video",
            "label": "Video Feature"
        }]
      },{{ block( 'collectionSortFilterBasic', '_config/_virtuals' ) }}
    ],
    "settings": {
        "with": ["images", "taxonomies", "users"],
        "where": {
            "type": ["article"]
        }
    }
},{
    "value": "books",
    "label": "Books",
    "settings": {
        "with": ["images"],
        "where": {
            "type": "book",
            "section": "knowledge"
        }
    },
    "virtuals": [
        {{ block( 'collectionSortFilterBasic', '_config/_virtuals' ) }}
    ]
},{
