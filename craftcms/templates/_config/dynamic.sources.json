    "value": "verbbevent",
    "label": "Event Listing (Date, location, etc.)",
    "virtuals": [{
        "type" : "select",
        "name" : "type",
        "label": "Event Type",
        "default": "",
        "options": [{
            "value": "",
            "label": "All Types"
        },{
            "value": "conference",
            "label": "Conference"
        },{
            "value": "livestream",
            "label": "Livestream"
        },{
            "value": "workshop",
            "label": "Workshop"
        }]
    },{
        "type" : "select",
        "name" : "period",
        "label": "Period",
        "default": "conference",
        "options": [{
            "value": "upcoming",
            "label": "Upcoming",
            "after": "{{ "now"|date("Y-m-d") }}"
        },{
            "value": "past",
            "label": "Past",
            "before": "{{ "now"|date("Y-m-d") }}"
        }]
    }],
    "settings": {
        "with": ["images", "taxonomies"],
        "element": "verbbevent",
        "where": {

        }
    }
},{
    "value": "logistics",
    "label": "Event Logistics",
    "virtuals": [{
        "type" : "select",
        "name" : "type",
        "label": "Type",
        "default": "session",
        "options": [{
            "value": "session",
            "label": "Session Descriptions"
        },{
            "value": "city",
            "label": "Cities (Regular/Active)",
            "variant": "city_regular"
        },{
            "value": "venue",
            "label": "Venues (Regular/Active)",
            "variant": "venue_regular"
        }]
    }],
    "settings": {
        "with": ["images"],
        "where": {
            "section": "logistics"
        }
    }
},{
    "value": "images",
    "label": "Local Image Assets",
    "settings" : {
        "element": "asset",
        "with": [],
        "where": {
            "kind": "image"
        }
    },
