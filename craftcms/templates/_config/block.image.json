[{
    "label": "Simple Image",
    "value": "simple",
    "settings": {},
    "docs": {
        "tooltip": "A flexible variant for simple presentation of one or more images."
    },
    "inputs": [
        {
            "label": "Image Transformation",
            "field": "transform",
            "type" : "select",
            "default": "",
            "fieldClass": "field width-50",
            "instructions": "Should we transform the image?",
            "options" : [
                {
                    "value" : "",
                    "label" : "None"
                }
               ,{
                    "value" : "square",
                    "label" : "Square aspect ratio"
                }
               ,{
                    "value" : "widescreen",
                    "label" : "Widescreen aspect ratio"
                }
            ]
        }
       ,{
            "label": "Captions & Titles",
            "field": "captionlayer",
            "type" : "select",
            "default": "",
            "fieldClass": "field width-50",
            "instructions": "Display titles and/or captions?",
            "options" : [
                {
                    "value" : "",
                    "label" : "None"
                }
               ,{
                    "value" : "caption",
                    "label" : "Use Image `Summary`"
                }
               ,{
                    "value" : "title",
                    "label" : "Show Image `Title` only"
                }
               ,{
                    "value" : "full",
                    "label" : "Show Image `Title` + `Summary`"
                }
            ]
        }
       ,{
            "label": "Handle Multiple Images",
            "field": "imagelayer",
            "type" : "select",
            "default": "single",
            "instructions": "Layout to use if/when the block has multple images.",
            "fieldClass": "field width-50",
            "options" : [
                {
                    "value" : "single",
                    "label" : "Ignore multiple images"
                }
               ,{
                    "value" : "randomize",
                    "label" : "Random single image"
                }
               ,{
                    "value" : "carousel",
                    "label" : "Basic carousel"
                }
               ,{
                    "value" : "grid2",
                    "label" : "Two (2) column grid"
                }
               ,{
                    "value" : "grid3",
                    "label" : "Three (3) column grid"
                }
            ]
        }
       ,{{ block( 'inputImageClickAction', '_config/_selectplus_virtual_fields' ) }}
    ]
},{
