[{
    "label": "Card Grid",
    "value": "cardgrid",
    "settings": {},
    "docs": {
        "tooltip": "Present users with a grid of cards, each representing an item from the collection."
    },
    "inputs": [
        {
            "label": "Card Type",
            "field": "cardlayer",
            "type" : "select",
            "default": "default",
            "instructions": "Which card layout should be used to present the content?",
            "options" : {
                "default"   : "Default",
                "text"      : "Text Only",
                "summary"   : "Summary",
                "overlay"   : "Overlay",
                "bulleticon": "Bullet Icon"
            }
        }

       ,{
            "label": "Grid Type",
            "field": "decklayer",
            "type" : "select",
            "instructions": "Which grid type should be used for the layout?",
            "default": "autogrid",
            "fieldClass": "width-50",
            "options" : [
                {
                    "value" : "autogrid",
                    "label" : "Autogrid"
                }
               ,{
                    "value" : "grid2",
                    "label" : "2 Column Grid"
                }
               ,{
                    "value" : "grid3",
                    "label" : "3 Column Grid"
                }
            ]
        }

        ,{{ block( 'inputClickAction', '_config/_selectplus_virtual_fields' ) }}
    ]
},{
    "label": "Accordion Panels",
    "value": "accordion",
    "settings": {
        "decklayer": "accordion"
    },
    "docs": {
        "tooltip": "Present users with a list of items, each represented by an accordion panel."
    },
    "inputs": [
        {
            "label": "Start with first panel open?",
            "field": "firstopen",
            "default": "1",
            "type" : "lightswitch"
        }
       ,{
            "label": "Panel Content Card",
            "field": "cardlayer",
            "type" : "select",
            "default": "accordion",
            "instructions": "Which card layout should be used to present the panel content?",
            "options" : {
                "accordion": "Simple Panel"
            }
        }
    ]
},{
    "label": "Carousel",
    "value": "carousel",
    "settings": {
        "cardlayer": "summary",
        "decklayer": "carousel"
    },
    "docs": {
        "tooltip": ""
    },
    "inputs": []

},{
    "label": "Masonry Boxes",
    "value": "masonry",
    "settings": {
        "decklayer": "masonry"
    },
    "docs": {
        "tooltip": ""
    },
    "inputs": []
},{
    "label": "Tab Panels",
    "value": "tabs",
    "settings": {
        "decklayer": "tabs",
        "cardlayer": "panel"
    },
    "docs": {
        "tooltip": ""
    },
    "inputs": []
},{
    "label": "Spotlight",
    "value": "spotlight",
    "settings": {
        "decklayer": "carousel",
        "cardlayer": "spotlight"
    },
    "docs": {
        "tooltip": ""
    },
    "inputs": []
}]