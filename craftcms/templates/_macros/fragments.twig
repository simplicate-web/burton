{#
 # Fragments in templates
 #
 # For embedding content from fragment entries directly into templates
 #
 # Usage:
 # {% import "_macros/fragments.twig" as fragments %}
 #}

{%- macro loadById( entryId, entry ) -%}
    {% set reusable = craft.entries().section('reusable').id(entryId).one() ??? null  %}
    {% if reusable %}
        {{ include( '_sections/reusable/_router.twig', {
            entry: reusable
        }, withContext = false) }}
    {% endif %}
{%- endmacro -%}

{%- macro loadBySlug( slug, entry ) -%}
    {% set reusable = craft.entries().section('reusable').slug(slug).one() ??? null %}
    {% if reusable %}
        {{ include( '_sections/reusable/_router.twig', {
            entry: reusable
        }, withContext = false) }}
    {% endif %}
{%- endmacro -%}
