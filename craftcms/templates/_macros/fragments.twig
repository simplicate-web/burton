{#
 # Fragments in templates
 #
 # For embedding content from fragment entries directly into templates
 #
 # Usage:
 # {% import "_macros/fragments.twig" as fragments %}
 ##}

{%- macro loadById( entryId, entry ) -%}
    {% set modular = craft.entries().section('modular').id(entryId).one() ??? null  %}
    {% if modular %}
        {{ include( '_components/builders/builderContent.twig', {
            entry: modular
        }, withContext = false) }}
    {% endif %}
{%- endmacro -%}

