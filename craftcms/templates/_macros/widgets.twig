{#
 # Widget Macros
 #
 # For embedding widgets into the right places
 #
 # Usage:
 # {% import "_macros/widgets.twig" as widgets %}
 ##}

{%- macro embed( block, gridCell, position ) -%}

    {% set block  = block ??? null %}
    {% set gridCell   = gridCell  ??? null %}
    {% set position   = position  ??? null %}

    {% set widget     = block.widget.reference() ??? null %}
    {% set widgetComp = widget.component ??? null %}
    {% set widgetCell = widget.gridCell  ??? null %}
    {% set widgetPos  = widget.position  ??? null %}

    {% if widgetComp and gridCell == widgetCell and widgetPos == position %}
        {{ include( widgetComp, {
            block: block,
            position : position
        }, withContext = false ) }}
    {% endif %}

{%- endmacro -%}
