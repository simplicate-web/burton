{#
 # Embed Macros
 #
 # For embedding content from external URLs via iframes
 #
 # Usage:
 # {% import "_macros/embed" as embed %}
 ##}

{%- macro iframe( url = null, config = null, blockID = null, loop = null ) -%}

    {% if url %}
        {% set media    = embedInfo( url ) %}
        {% set provider = media.provider ??? null %}
        {% set blockID  = blockID ??? create('craft\\helpers\\StringHelper').UUID() %}

        {% if media %}
            {{ include( [
                "_components/cards/media/#{provider}",
                "_components/cards/media/iframe"
            ], {
                blockID: blockID,
                config: config,
                loop: loop,
                media: media
            }) }}
        {% endif %}
    {% endif %}
{%- endmacro -%}