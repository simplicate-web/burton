    {% embed '_components/navigation/_base.list' with {
        title : 'Sitehub Menu',
        handle: 'sitehub',
        items : [
            { title: 'Sitehub', url: siteUrl( 'sitehub' ) },
            { title: 'Playbooks', url: siteUrl( 'sitehub/playbooks' ) },
            { title: 'Tools', hasDescendants: true, children: [
                { title: 'Grids',           url: siteUrl( 'sitehub/layout/grids' ) },
                { title: 'Containers',      url: siteUrl( 'sitehub/layout/containers' ) },
                { title: 'Micro Layouts',   url: siteUrl( 'sitehub/layout/micro-layouts' ) },
                { title: 'Spacing',         url: siteUrl( 'sitehub/layout/spacing' ) },
                { title: 'Typography',      url: siteUrl( 'sitehub/layout/typography' ) },
                { title: 'Themes',          url: siteUrl( 'sitehub/layout/themes' ) },
                { title: 'Block Previewer', url: siteUrl( 'sitehub/blocks' ) },
                { title: 'Card Previewer',  url: siteUrl( 'sitehub/cards' ) },
                { title: 'Sample Pages',    url: siteUrl( 'sitehub/samples' ) }
            ] },
            { title: 'Help', url: siteUrl( 'sitehub/help' ) },
        ],
    } %}
        {% block item %}
            {{ node.hasDescendants ??? null
                ? block('dropdownMenu') : parent() }}
        {% endblock %}

        {% block dropdownMenu %}
            {% embed "_components/navigation/dropdown" with
                { dropdown: node, itemClass: block( 'itemClass' ) }
            %}
                {% block buttonClass %}
                    {{ itemClass }}
                {% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}