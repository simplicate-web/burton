{% set linkClass   = 'nav-link text-base lg:text-xl mr-2 md:mr-10 text-gray-500 hover:text-gray-700' %}
{% set activeClass = 'nav-active text-gray-700' %}

<div class="flex flex-grow items-start w-full items-center">   
    <nav role="navigation" aria-label="Sitebook Navigation">
        {% set pages = craft.entries.section('sitebook').level(1).slug('not home') %}
        <ul class="m-0 p-0 list-none flex flex-col sm:flex-row">
            {% for page in pages.all() %}
                <li class="font-display">
                    <a
                        href="{{page.url}}"
                        class="{{linkClass}} {{ page.slug in craft.app.request.url ? activeClass : '' }}"
                        >{{page.title}}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
</div>