{% import "_macros/richtext" as richtext %}
{% set htag    = htag    ??? 'h4' %}
{% set title   = title   ??? entry.title ??? entry.headline ??? null %}
{% set text    = text    ??? entry.summary ??? entry.dek ??? entry.text ??? null %}
{% set url     = url     ??? entry.url ??? null %}
{% set handle  = handle  ??? entry.section.handle ??? 'Base' %}
{% set images  = images  ??? entry.images.all() ??? null %}

<article class="cCard cCard__logoCard cCard__{{handle}}">
    <div class="grid grid-cols-1 h-full content-start">
        <div class="bg-gray-200 w-full aspect-video flex items-center justify-center">
            {%- if title -%}
                {{ richtext.formatHeadline( title, htag, "mb-0" ) }}
            {%- endif -%}
        </div>
    </div>  
</article>