{% import "_macros/richtext" as richtext %}

{% set htag    = htag    ??? 'h3' %}
{% set title   = title   ??? entry.title ??? entry.headline ??? null %}
{% set summary = text    ??? entry.summary ??? entry.dek ??? entry.text ??? null %}
{% set url     = url     ??? entry.url ??? null %}
{% set handle  = handle  ??? entry.section.handle ??? null %}
{% set images  = images  ??? entry.images.all() ??? null %}

{% block articleTag %}
<article class="tease {{handle}} relative">
{% endblock %}
    <div class="flex flex-col lg:flex-row max-w-sm lg:max-w-full mx-auto items-center">
        
        <div class="bg-slate-500 aspect-video max-w-sm h-64 xl:h-72 2xl:h-80 xl:max-w-full lg:mr-16">
            &nbsp;
        </div>

        <div class="mt-4 md:mt-0 text-left">
            {% block aboveTitle %}{% endblock %}

            {% block title %}
                {%- if title -%}
                    <{{htag}} class="text-4xl mb-4">{{title}}</{{htag}}>
                {%- endif -%}
            {% endblock %}

            {% block aboveSummary %}{% endblock %}

            {% block summary %}
                {% set summary = summary
                    ? craft.typogrify.truncate(summary, 200)
                    : '' %}

                {{ richtext.prose( summary, 'lg' ) }}
            {% endblock %}

            {% block link %}
                {%- if url -%}
                    <a class="self-end mt-2 clickable-parent block" href="{{ url }}">Read more â†’</a>
                {% endif %}
            {% endblock %}
        </div>
    </div>
</article>