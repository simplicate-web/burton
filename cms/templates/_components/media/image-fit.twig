{% set images    = images ??? content.images.all() ??? null %}
{% set class     = class  ??? "object-cover object-center" %}
{% set transform = transform ??? null %}

{% set image     = images|first ??? null %}

{% if transform %}
    {% do image.setTransform(transform) %}
{% endif %}

{% if image %}   
    <img
        src="{{image.url}}"
        alt="{{image.title}}"
        loading="lazy"
        class="{{class}} absolute top-0 left-0 right-0 bottom-0">
{% endif %}

{# wireframe placeholder #}
{% if not image and getenv('CRAFT_ENVIRONMENT') != 'production' %}
    <div class="bg-gray-500 aspect-video w-full h-full">&nbsp;</div>
{% endif %}