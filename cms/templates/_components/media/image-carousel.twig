{% set images    = images ??? content.images.all() ??? null %}
{% set class     = class ??? blockType ??? null %}
{% set transform = transform ??? null %}
{% set blockID   = blockID ??? content.id ??? 1 %}
{% set inModal   = inModal ?? false %}

{% if images %}
    <div
        x-data="{ splide: null }"
        {% if inModal %}
        @set-splide-index-{{blockID}}.window="$nextTick(() => {
            {# this is a bit hacky, but basically, if we're creating a
               carousel inside a modal, we need to wait until after the
               modal loads before letting splide calculate slide widths #}
            setTimeout( () => {
                if( splide ) {
                    splide.go(parseInt($event.detail)-1)
                } else {
                    splide = new Splide($refs.splide{{blockID}}, {
                        type: 'fade',
                        start: parseInt($event.detail)-1,
                        perPage: 1
                    }).mount()
                }
            }, 250 );
        })"
        {% else %}
            x-init="$nextTick(() => {
                splide = new Splide($refs.splide{{blockID}}, {
                    type: 'loop',
                    perPage: 1
                }).mount()
            })"
        {% endif %}
        class="relative">
        {% if not inModal %}
            <figure class="flex items-center justify-center absolute -top-32 -right-20 -bottom-32 -left-20" aria-hidden="true">
                <lottie-player
                    autoplay
                    loop
                    mode="bounce"
                    preserveAspectRatio="none"
                    speed="0.35"
                    src="https://simplicate.nyc3.digitaloceanspaces.com/undevelopment/burton/static/lottie/background-blob.json"
                    class="w-full"
                ></lottie-player>
            </figure>
        {% endif %}

        {% set carouselClass = inModal
            ? "px-4 xl:py-14 xl:px-20 opacity-95"
            : "" %}

        <section x-ref="splide{{blockID}}" class="splide relative z-20 {{carouselClass}}" aria-label="Slider {{blockID}}">
            <div class="splide__track">
                <ul class="splide__list">
                    {% for image in images %}
                        <li class="splide__slide flex flex-col items-center justify-center pb-8">
                            {{ include( '_components/media/image', {
                                images: [image],
                                class: inModal ? 'w-96 h-96' : null
                            } ) }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
{% endif %}

{% html %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/css/splide.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"></script>

    <style>
        .splide__pagination__page.is-active {
            background: #333;
        }
    </style>    
{% endhtml %}